   134                                  calc_segment_base:                       ;计算16位段地址
   135                                                                           ;输入：DX:AX=32位物理地址
   136                                                                           ;返回：AX=16位段基地址 
   137 000000AE 52                               push dx                          
   138                                           
   139 000000AF 2E0306[C700]                     add ax,[cs:phy_base]
   140 000000B4 2E1316[C900]                     adc dx,[cs:phy_base+0x02]        ;此时dx:ax就是地址，但是只有20位有效，其中低16位在ax中，剩余的4位在dx中
   141 000000B9 C1E804                           shr ax,4                         ;ax向右移动4位，空出高4位来
   142 000000BC C1CA04                           ror dx,4                         ;ror是循环右移指令，通过这个指令把dx的低4位移动到了高4位上
   143 000000BF 81E200F0                         and dx,0xf000                    ;将dx的低12位清零
   144 000000C3 09D0                             or ax,dx                         ;两者相与得到20位地址，保存在ax寄存器中
   145                                           
   146 000000C5 5A                               pop dx
   147                                           
